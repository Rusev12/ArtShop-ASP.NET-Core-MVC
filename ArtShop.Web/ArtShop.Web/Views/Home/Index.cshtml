@{
    ViewData["Title"] = "Home";
}
<style>
    .glyphicon {
        font-size: 4em;
    }
</style>

<div class="row text-center">
    <h1 style="font-size:4em"><img src="~/images/download.png" /></h1><hr />
    <p class="text-muted">Come check out our catologue of art products</p>
    <a asp-action="All" asp-controller="ArtProduct" class="btn btn-primary btn-lg">Browse our catalogue.</a>

</div>

<div class="container-fluid">
    <section id="about">
        <div class="row">
            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                <span class="glyphicon glyphicon-ok text-primary"></span>
                <h3>Exclusive products</h3>
                <p class="text-muted">We offer only exclusive products.</p>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                <span class="glyphicon glyphicon-plane text-primary"></span>
                <h3>Ready to ship</h3>
                <p class="text-muted">We ship all over the world!</p>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                <span class="glyphicon glyphicon-phone text-primary"></span>
                <h3>Mobile friendly</h3>
                <p class="text-muted">Responsive design for mobile devices!</p>
            </div>

            <div class="col-xs-12 col-sm-6 col-md-3 text-center">
                <span class="glyphicon glyphicon-heart text-primary"></span>
                <h3>Made with love</h3>
                <p class="text-muted">..and perfection</p>
            </div>
        </div>
    </section>

    <section id="portfolio">
        @await Html.PartialAsync("_indexPartial")
    </section>

    <section id="contact">
        <div class="row">
            <div class="col-md-8 col-md-offset-2 text-center">
                <h2 class="section-heading">Let's get in touch!</h2>
                <hr />
                <p>Give us a call and order some of our fine products!</p>
            </div>

            <div class="col-md-4 col-md-offset-2 text-center">
                <span class="glyphicon glyphicon-phone"></span>
                <p>+359-255-656-689</p>
            </div>

            <div class="col-md-4  text-center">
                <span class="glyphicon glyphicon-envelope"></span>
                <p><a href="mailto:rusev_lv@abv.bg"></a>rusev_lv@abv.bg</p>
            </div>
        </div>

    </section>
</div>

