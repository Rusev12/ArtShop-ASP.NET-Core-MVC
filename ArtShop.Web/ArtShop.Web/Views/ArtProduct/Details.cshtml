@model AllArtProducts
@{
    ViewData["Title"] = "Details";
}

<h2>Details about this item.</h2>

<div class="container">
    <article>
        <header>
            <h2>
                @Model.Name
            </h2>

        </header>

        <p>
            @Model.Description
        </p>

        @if (Model.UrlPath != null)
        {
            <div class="item">
                <img src="~/images/@Model.UrlPath" alt="image" width="540" height="450">

                <div class="item-overlay top"></div>

            </div>
            <img src="~/images/logo_s.png" class="img-responsive float" alt="image">

        }
        <p style="margin-left:22px">
            Price @Model.Price $
        </p>


            @Html.ActionLink("Buy", "Sell", "Customer", new { @id = Model.Id }, new { @class = "btn btn-success btn-lg buy" })

        <footer class="pull-right">
            @if (User.Identity.IsAuthenticated && (User.IsInRole("Administrator") ))
            {
                @Html.ActionLink("Update", "Update", "ArtProduct", new { @id = Model.Id }, new { @class = "btn btn-success btn-xs" })
                @Html.ActionLink("Delete", "ConfirmDelete", "ArtProduct", new { @id = Model.Id }, new { @class = "btn btn-danger btn-xs" })
            }
            @Html.ActionLink("Back", "All", "ArtProduct", null, new { @class = "btn btn-default btn-xs" })
        </footer>
    </article>
</div>

