@model AllArtProducts
@{
    ViewData["Title"] = "Update";
}

<h2>Update</h2>
<div class="container">
    <div class="well mt-60">
        <h2 class="color">Add Art Product</h2>
        @using (Html.BeginForm("Update", "ArtProduct", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()


            <div class="form-group">
                @Html.LabelFor(m => m.Name, new { @class = "control-label col-sm-4 color" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Name, new { @class = "form-control", @placeholder = "Please enter brand name here." })

                </div>
                <span asp-validation-for="Name" class="text-danger"> </span>

            </div>
            <img src="~/Content/images/girl.jpg" class="reg-pic" alt="Alternate Text" />
            <div class="form-group">
                @Html.LabelFor(m => m.Description, new { @class = "control-label col-sm-4 color" })
                <div class="col-sm-4">
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "7" })

                </div>
                <span asp-validation-for="Description" class="text-danger"> </span>

            </div>

            <div class="form-group">
                @Html.LabelFor(m => m.Price, new { @class = "control-label col-sm-4 color" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Price, new { @class = "form-control", @rows = "7", @type = "number" })

                </div>
                <span asp-validation-for="Price" class="text-danger"> </span>

            </div>


            <div class="form-group">
                @Html.LabelFor(m => m.Brand, new { @class = "control-label col-sm-4 color" })
                <div class="col-sm-4">
                    @Html.TextBoxFor(m => m.Brand, new { @class = "form-control", @rows = "7", @type = "text" })

                </div>
                <span asp-validation-for="Price" class="text-danger"> </span>

            </div>

            <div class="form-group">
                @Html.Label("files", "Image", new { @class = "control-label col-sm-4 color" })
                <div class="col-sm-4">
                    @Html.TextBox("files", null, new { type = "file", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "All", "ArtProduct", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Update" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




