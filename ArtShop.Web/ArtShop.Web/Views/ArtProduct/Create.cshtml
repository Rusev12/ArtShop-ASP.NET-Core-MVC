@model ArtProducts
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<div class="container">
    <div class="well mt-60">
        <h2 class="color">Add Art Product</h2>
        @using (Html.BeginForm("Create", "ArtProduct", FormMethod.Post, new { enctype = "multipart/form-data", @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()


            <div class="form-group">
                <label asp-for="Name" class="control-label col-sm-4 color"></label>
               
                <div class="col-sm-4">
                    <input asp-for="Name" class="form-control" placeholder="Please enter brand name here." />
                    

                </div>
                <span asp-validation-for="Name" class="text-danger"> </span>

            </div>

            <div class="form-group">
                <label asp-for="Description" class="control-label col-sm-4 color"></label>
                
                <div class="col-sm-4">
              
                    @Html.TextAreaFor(m => m.Description, new { @class = "form-control", @rows = "7" })

                </div>
                <span asp-validation-for="Description" class="text-danger"> </span>

            </div>

            <div class="form-group">
                
                <label asp-for="Price" class="control-label col-sm-4 color" ></label>
                <div class="col-sm-4">
                    <input asp-for="Price" class="form-control" placeholder="Please enter price." type="number"/>
                    
                </div>
                <span asp-validation-for="Price" class="text-danger"> </span>

            </div>


            <div class="form-group">
                <label asp-for="Brand" class="control-label col-sm-4 color"></label>
       
                <div class="col-sm-4">
                    <input asp-for="Brand" class="form-control" placeholder="Please brand name here." />

          
                </div>
                <span asp-validation-for="Brand" class="text-danger"> </span>

            </div>

            <div class="form-group">
                @Html.Label("files", "Image", new { @class = "control-label col-sm-4 color" })
                <div class="col-sm-4">
                    @Html.TextBox("files", null, new { type = "file", @class = "form-control" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-4 col-sm-offset-4">
                    @Html.ActionLink("Cancel", "Index", "Home", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Create" class="btn btn-success" />
                </div>

                <img src="~/images/create.png" class="img-responsive create" style="width:100px" alt="image">
            </div>
        }
    </div>

</div>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}

