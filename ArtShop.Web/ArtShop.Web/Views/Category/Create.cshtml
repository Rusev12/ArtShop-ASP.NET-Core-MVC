@model CategoryServiceModel
@{
    ViewData["Title"] = "Create";
}

<h2>Create</h2>

<form asp-action="Create" asp-controller="Category" method="post">
    <div class="container">
        <div class="well mt-60">
            <div class="form-group">
                <label asp-for="CategoryName" class="control-label col-sm-4 color"></label>
               
                <div class="col-sm-4">
                    <input asp-for="CategoryName" class="form-control" placeholder="Please enter brand name here."/>
                   
                </div>
                <span asp-validation-for="CategoryName" class="text-danger"> </span>

            </div>
            <input type="submit" value="Create Category" />

        </div>
    </div>
</form>

@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}




